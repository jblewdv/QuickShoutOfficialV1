extends dash_layout

block content


  main.col-md-9.ml-sm-auto.col-lg-10.pt-3.px-4(role='main')
    .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pb-2.mb-3.border-bottom
      h1.h2 Reports
      <!-- .btn-toolbar.mb-2.mb-md-0
        .btn-group.mr-2
          button.btn.btn-sm.btn-outline-secondary Share
          button.btn.btn-sm.btn-outline-secondary Export
        button.btn.btn-sm.btn-outline-secondary.dropdown-toggle
          span(data-feather='calendar')
          | This week -->
    br


    .card
      .card-body
        form(method='POST', action='/dashboard/feedback')
          #starRating.form-group
            label(for='exampleFormControlSelect1') On a scale of 1-5, how many stars would you give this software?
            select.form-control(name='starRating')
              option 1
              option 2
              option 3
              option 4
              option 5
          #errors_or_bugs.form-group
            label
              | During your test, did you experience any bugs or errors? If so, let us know more below.
            textarea.form-control(name='errors_or_bugs', rows='3')
          #favorites.form-group
            label Out of the whole software, what aspects were your favorite and least favorite?
            textarea.form-control(name='favorites', rows='3')
          #futureFeatures.form-group
            label What features would you like to see inside this software in the future?
            textarea.form-control(name='futureFeatures', rows='3')
          label
            | If the bugs were removed and your recommended features were installed, would you continue to use this software in the future?
          select.form-control
            option Yes
            option No
          #recommend.form-group
            label How likely are you to recommend this software to other Instagram influencers?
            select.form-control(name='recommend')
              option Not really.
              option Ehh, maybe.
              option Yes, for sure!
          button.btn.btn-primary(type='submit') Submit
